<% layout('/layouts/boilerplate') %>
    <!-- Bootstrap Card -->


    <div class="row">
        <div class="col-6 offset-3">

            <div class="card mb-3">
                <img src="<%= campground.image %> " class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">Price: $<%= campground.price %> / night</li>

                </ul>
                <div class="card-body">
                    <a href="/campground/<%= campground._id %>/edit " class="btn btn-success">Edit</a>

                    <form class="d-inline" action="/campground/<%= campground._id %>?_method=delete " method="post">
                        <button class="btn btn-danger">Delete This Camp</button>
                    </form>

                </div>

                <div class="card-footer text-muted">
                    added 2 days ago
                </div>
            </div>
            <h2>Leave a review</h2>
            <form action="" class="mb-3">
                <div class="mb-3">
                    <label class="form-lable" for="rating"></label>
                    <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                </div>
                <div class="mb-3">
                    <label class="form-lable" for="body"> Review </label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"></textarea>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>

        </div>
    </div>